{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "rainstorm-paint",
    "version": "0.1.0",
    "identifier": "com.chybne.rainstorm-paint",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../build"
    },
    "app": {
        "macOSPrivateApi": true,
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "rainstorm-paint",
                "width": 1000,
                "height": 700,
                "decorations": true,
                "transparent": true,
                "titleBarStyle": "Overlay",
                "hiddenTitle": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
